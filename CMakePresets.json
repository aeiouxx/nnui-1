{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base-debug",
      "hidden": true,
      "description": "Base debug configuration",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
      }
    },
    {
      "name": "base-release",
      "hidden": true,
      "description": "Base release configuration",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
      }
    },
    {
      "name": "base-ninja-debug",
      "hidden": true,
      "description": "Base ninja debug configuration",
      "inherits": ["base-debug"],
      "cacheVariables": {
        "CMAKE_GENERATOR": "Ninja",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "base-ninja-release",
      "hidden": true,
      "description": "Base ninja release configuration",
      "inherits": ["base-release"],
      "cacheVariables": {
        "CMAKE_GENERATOR": "Ninja",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ninja-debug",
      "description": "Debug build",
      "configurePreset": "base-ninja-debug"
    },
    {
      "name": "ninja-release",
      "description": "Release build",
      "configurePreset": "base-ninja-release"
    }
  ]
}
